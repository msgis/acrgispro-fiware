<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="msGIS.ProApp_FiwareSummit.UserControl_EntityTypes"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="240">

    <!--d:DataContext="{Binding Path=msGIS.ProApp_FiwareSummit.Dockpane_SpringBoard}"-->

    <Grid x:Name="Grid_EntityTypes" IsEnabled="False" Margin="0,12,0,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Entity type" Margin="6,0,6,0" VerticalAlignment="Center"/>
        <ComboBox x:Name="ComboBox_EntityTypes" Grid.Row="0" Grid.Column="1" Margin="6" VerticalAlignment="Center" IsReadOnly="True"/>

        <Label Grid.Row="1" Content="Count" Margin="6,0,6,0" VerticalContentAlignment="Center"/>
        <!--<TextBlock Grid.Row="1" Grid.Column="1" Text="0" Margin="6" VerticalAlignment="Center"/>-->
        <Label Grid.Row="1" Grid.Column="1" x:Name="Label_Count" Content="Count" Margin="6,0,6,0" VerticalContentAlignment="Center"/>

        <Label Grid.Row="2" Grid.Column="0" Content="REST-Layer" Margin="6,0,6,0" VerticalAlignment="Center"/>
        <Button x:Name="Button_EntityToLayer" Grid.Row="2" Grid.Column="1" Content="Entities --> Layer" ToolTip="Create layer features of this entity type (without Datasource Plugin)" Margin="6"/>

        <Label Grid.Row="3" Grid.Column="0" Content="REST-CSV" Margin="6,0,6,0" VerticalAlignment="Center"/>
        <Button x:Name="Button_EntityToCSV" Grid.Row="3" Grid.Column="1" Content="Entities --> CSV" ToolTip="Write entities of this type to CSV file for use with Datasource Plugin" Margin="6"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Datasource" Margin="6,0,6,0" VerticalAlignment="Center"/>
        <Button x:Name="Button_Datasource" Grid.Row="4" Grid.Column="1" Content="Pro Datasource" ToolTip="Prepare CSV data type support for ArcGIS Pro Datasource Framework" Margin="6"/>

        <Label Grid.Row="5" Grid.Column="0" Content="CSV-Layer" Margin="6,0,6,0" VerticalAlignment="Center"/>
        <Button x:Name="Button_CsvToLayer" Grid.Row="5" Grid.Column="1" Content="CSV --> Layer" ToolTip="Create feature layer of this entity type using prepared ArcGIS Pro Datasource Framework" Margin="6"/>

        <Label Grid.Row="6" Grid.Column="0" Content="To Do" Margin="6,0,6,0" VerticalAlignment="Center"/>
        <Label Content="Ask for more!" ToolTip="roman.trojan@msgis.com" Grid.Row="6" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Orange"/>

    </Grid>

</UserControl>
